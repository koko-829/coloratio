<!-- 投稿詳細画面モーダルパーシャル -->
<div x-cloak x-show="modalPalette" x-transition.opacity.duration.200ms x-trap.inert.noscroll="modalPalette" x-on:keydown.esc.window="modalPalette = false" x-on:click.self="modalPalette = false" class="fixed inset-0 z-30 flex justify-center bg-black/20 p-4 pb-8 backdrop-blur-md items-center" role="dialog" aria-modal="true">
  <!-- Modal -->
  <div x-show="modalPalette"
    x-transition:enter="transition ease-out duration-200 delay-100 motion-reduce:transition-opacity"
    x-transition:enter-start="opacity-0 translate-y-8"
    x-transition:enter-end="opacity-100 translate-y-0"
    class="bg-[#f8f7f1] flex max-w-screen-md w-[90vw] max-h-[80vh] overflow-hidden rounded-2xl text-neutral-600 dark:border-neutral-700 dark:bg-neutral-900 dark:text-neutral-300"
    >
    <!-- モーダル中身セクション -->
    <div class="w-full overflow-y-auto overscroll-y-contain hidden-scrollbar rounded-2xl"> <%# hidden-scrollbarはカスタムクラス(スクロールバーを非表示にする用) %>

      <!-- turbo_stream用の補足ID(この部分を丸ごと入れ替える) -->
      <div :id="modalPalette"> <%# idをmodalPaletteの値によって動的に定義(Alpine) %>
        <!-- パレットヘッダー部分 -->
        <div class="overflow-hidden aspect-[5/2] flex">
          <div class="w-[20%] bg-red-400"></div>
          <div class="w-[20%] bg-orange-400"></div>
          <div class="w-[20%] bg-blue-400"></div>
          <div class="w-[20%] bg-green-400"></div>
          <div class="w-[20%] bg-purple-400"></div>
        </div>

        <!-- 上端パレット部分より下 -->
        <div class="p-4">

          <!-- カラーコピー枠 -->
          <div class="my-5 w-[70%] mx-auto grid grid-cols-5 place-content-center place-items-center gap-6">
            <% 5.times do |i| %>
              <%#= image_tag "enogu.svg", class:"w-full" %>
              <%= render partial:'shared/svg/enogu_svg', class: "w-full" %>
            <% end %>
          </div>

          <!-- 仮置き開発中モーダル -->
          <div class="flex flex-col items-center justify-center my-10">
            <%= image_tag "kaihatsu_now.svg", class:"w-full" %>
            <%= image_tag "kaihatsu_now.svg", class:"w-[70%]" %>
            <%= image_tag "kaihatsu_now.svg", class:"w-[50%]" %>
          </div>
        </div>

      </div>

    </div>
  </div>
</div>
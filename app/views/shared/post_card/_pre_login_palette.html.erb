<%# ログイン前パレット用カードコンポーネント %>

  <div class="group animate-slide-top w-full p-1">
    <!-- パレット表示部分 -->
    <div @click="modalIsOpen = true" class="relative transform hover:scale-105 transition-transform duration-300 w-full aspect-[5/3] overflow-hidden border-slate-500 border-2 rounded-2xl shadow-2xl flex">
      <% ratio = post.ratio.split(','); colors = post.colors; post.color_count.times do |i| %>
        <div style="width: <%= ratio[i]%>%; background-color: <%= colors[i].hex_code %>" class="h-full bg-gray-400"></div>
      <% end %>
    </div>

    <!-- タイトル -->
    <div @click="modalIsOpen = true" class="text-base group-hover:underline cursor-pointer text-gray-600 ml-2 mt-3 truncate">
      <%= post.title %>
    </div>

  </div>

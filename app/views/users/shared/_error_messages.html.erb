<% if resource.errors.any? %>
  <div class="rounded-lg border border-red-500 bg-white text-neutral-600" data-turbo-cache="false" role="alert">
    <div class="flex w-full items-center bg-red-500/10 p-4">
      <div>
        <div class="flex items-center gap-1 mb-1">
          <div class="bg-red-500/15 text-red-500 rounded-full p-1" aria-hidden="true">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="size-6" aria-hidden="true">
              <path fill-rule="evenodd" d="M10 18a8 8 0 1 0 0-16 8 8 0 0 0 0 16ZM8.28 7.22a.75.75 0 0 0-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 1 0 1.06 1.06L10 11.06l1.72 1.72a.75.75 0 1 0 1.06-1.06L11.06 10l1.72-1.72a.75.75 0 0 0-1.06-1.06L10 8.94 8.28 7.22Z" clip-rule="evenodd" />
            </svg>
          </div>
          <h3 class="text-sm font-semibold text-red-500">入力エラー</h3>
        </div>
        <p class="text-xs font-medium sm:text-sm"><%= I18n.t("errors.messages.not_saved", count: resource.errors.count, resource: resource.class.model_name.human.downcase)%></p>
        <ul class="mt-2 list-inside list-disc pl-2 text-xs font-medium text-red-500 sm:text-sm">
          <% resource.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
<% end %>

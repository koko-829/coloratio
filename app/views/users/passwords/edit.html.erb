<div class= "min-h-fit text-gray-900 flex items-center justify-center">
  <div x-data="resetPasswordValidation" class="m-10">
    <div class="relative border-2 p-10 rounded-lg shadow-md py-10 flex flex-col items-center justify-center">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>

        <div class="flex flex-col max-w-72">
          <div class="mb-6 text-xl font-bold">パスワードの再設定</div>

          <%= render "users/shared/error_messages", resource: resource %>
          <%= f.hidden_field :reset_password_token %>
          <div class="flex gap-1 items-center">
            <%= f.label :password, "新しいパスワード" %>

            <div class="relative w-fit">
                <svg class="size-5 fill-gray-400 peer cursor-pointer" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor"><path d="M12 22C6.47715 22 2 17.5228 2 12C2 6.47715 6.47715 2 12 2C17.5228 2 22 6.47715 22 12C22 17.5228 17.5228 22 12 22ZM11 15V17H13V15H11ZM13 13.3551C14.4457 12.9248 15.5 11.5855 15.5 10C15.5 8.067 13.933 6.5 12 6.5C10.302 6.5 8.88637 7.70919 8.56731 9.31346L10.5288 9.70577C10.6656 9.01823 11.2723 8.5 12 8.5C12.8284 8.5 13.5 9.17157 13.5 10C13.5 10.8284 12.8284 11.5 12 11.5C11.4477 11.5 11 11.9477 11 12.5V14H13V13.3551Z"></path></svg>
                <div id="tooltipExample" class="pointer-events-none absolute bottom-full mb-2 left-1/2 -translate-x-1/2 z-10 flex w-80 flex-col gap-1 rounded-sm bg-neutral-950 p-2.5 text-xs text-neutral-300 opacity-0 transition-all ease-out peer-hover:opacity-100 peer-focus:opacity-100" role="tooltip">
                    <span class="text-sm font-medium text-white">パスワードについて</span>
                    <ul>
                      <li>・英字(小文字・大文字)、数字、記号(!#$%&@)が使用できます。</li>
                      <li>・6文字以上で入力してください。</li>
                      <li>・半角英字・数字がそれぞれ1文字以上必要です。</li>
                    </ul>
                </div>
            </div>

          </div>

          <div x-data="{ show: false }" class="relative flex items-center">
            <%= f.text_field :password,
              autofocus: true,
              autocomplete: "new-password",
              class: "w-full mt-1 px-4 py-3 rounded-lg bg-gray-100 border border-gray-200 placeholder-gray-400 text-sm focus:bg-white",
              placeholder: "半角英数字・#{@minimum_password_length}文字以上",
              maxlength: 128,
              ":type": "show ? 'text' : 'password'",
              "x-model": "password",
              "x-on:blur": "validatePasswordComplexity(); validatePasswordMinLength(); validatePasswordEmpty();",
              "x-on:change": "validatePasswordComplexity(); validatePasswordMinLength(); validatePasswordEmpty();",
              "x-on:input": "validatePasswordEmpty(); validatePasswordRemove(); validateSubmit();"
            %>
            <!-- パスワード表示非表示アイコン -->
            <button type="button" class="absolute right-2 bg-transparent flex items-center justify-center hover:text-blue-600" @click="show = !show">
                <svg x-show="!show" class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21"></path>
                </svg>
                <svg x-show="show" class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" style="display: none;">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                </svg>
            </button>
          </div>
          <div x-show="errors.password" x-text="errors.password" class="text-red-500 text-xs mb-2"></div>

          <%= f.label :password_confirmation, "新しいパスワード(確認用)" %>
          <div x-data="{ show: false }" class="relative flex items-center">
            <%= f.text_field :password_confirmation,
              autocomplete: "new-password",
              class: "w-full mt-1 px-4 py-3 rounded-lg bg-gray-100 border border-gray-200 placeholder-gray-400 text-sm focus:bg-white",
              maxlength: 128,
              ":type": "show ? 'text' : 'password'",
              "x-model": "password_confirmation",
              "x-on:input": "validateSubmit();"
            %>
            <!-- パスワード表示非表示アイコン -->
            <button type="button" class="absolute right-2 bg-transparent flex items-center justify-center hover:text-blue-600" @click="show = !show">
                <svg x-show="!show" class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21"></path>
                </svg>
                <svg x-show="show" class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" style="display: none;">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                </svg>
            </button>
          </div>
          <div x-show="errors.password_confirmation" x-text="errors.password" class="text-red-500 text-xs mb-2"></div>

          <%#= f.submit  "パスワード変更", class:"mt-4 cursor-pointer tracking-wide shadow-lg border-2 text-sm font-semibold bg-orange-400 text-gray-100 py-2 px-8 rounded-3xl hover:bg-orange-500 transition-all duration-300 ease-in-out flex items-center justify-center focus:shadow-outline focus:outline-none disabled:opacity-50 disabled:pointer-events-none hover:scale-105 active:scale-95" %>
          <button
            @blur="validateSubmit"
            type="submit"
            data-disable-with="Reset Password"
            class="mt-4 cursor-pointer tracking-wide shadow-lg border-2 text-sm font-semibold bg-orange-400 text-gray-100 py-2 px-8 rounded-3xl hover:bg-orange-500 transition-all duration-300 ease-in-out flex items-center justify-center focus:shadow-outline focus:outline-none disabled:opacity-50 disabled:pointer-events-none hover:scale-105 active:scale-95"
            :disabled="!status_submit"
          >
          パスワード変更
          </button>


        </div>
      <% end %>

    </div>
  </div>
</div>


<!-- Alpineスクリプト読み込み用 -->
  <%= render "reset_password_alpine" %>
<!-- End -->